<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ReviewActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/getImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:src="@drawable/no_image"
                android:visibility="visible" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:text="Title"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/getTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                android:text="title"
                android:fontFamily="@font/nanumgothic"
                app:layout_constraintStart_toEndOf="@+id/title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Review"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/getReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/item_layout_shape"
                android:ems="10"
                android:padding="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="start|top"
                android:hint="Writing Review"
                android:fontFamily="@font/nanumgothic"
                android:inputType="textMultiLine"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/genre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:text="Genre"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/getGenreSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="50dp"
                android:minHeight="48dp"
                android:fontFamily="@font/nanumgothic"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Rating"

                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"/>

            <RatingBar
                android:id="@+id/getRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:layout_marginStart="50dp"
                android:contentDescription="Rating of Movie"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/complete_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:text="Complete" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_gravity="center"
                android:text="Delete" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>